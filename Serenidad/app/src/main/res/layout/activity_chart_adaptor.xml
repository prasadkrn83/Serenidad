<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/thought_log_fragment"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/csardd"
        android:backgroundTint="#B3E2C2"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imgId"
            android:layout_width="0dp"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:layout_weight="0.1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_sentiment_very_satisfied_black_24dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_weight="0.4"
            android:fontFamily="@font/dreamgt"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_thought_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_weight="0.2"
            android:fontFamily="@font/dreamgt"
            android:gravity="center" />

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.3"
            android:gravity="center" />
    </LinearLayout>
</android.support.v7.widget.CardView>
