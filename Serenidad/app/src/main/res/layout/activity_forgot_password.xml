<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="379dp"
        android:layout_height="546dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/textSignup"
            android:layout_width="261dp"
            android:layout_height="39dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="101dp"
            android:layout_marginBottom="48dp"
            android:text="restablecer la contrase単a"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/newPass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <EditText
            android:id="@+id/newPass"
            android:layout_width="267dp"
            android:layout_height="45dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="36dp"
            android:ems="10"
            android:hint=" Contrase単a nueva"
            android:inputType="textPassword"
            app:layout_constraintBottom_toTopOf="@+id/confPass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.208"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textSignup"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <EditText
            android:id="@+id/confPass"
            android:layout_width="267dp"
            android:layout_height="48dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="224dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:hint="Confirmar contrase単a"
            android:inputType="textPassword"
            app:layout_constraintBottom_toTopOf="@+id/btnRegister"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.189"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="73dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="153dp"
            android:background="@color/darkGreen"
            android:onClick="saveNewPassword"
            android:text="restablecer la contrase単a"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.425"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confPass" />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>